<main id="profile">
  <%- include('../../layout/banner', {
    bannerMessage: `Profile Page`,
    username: username
  }) %>
  <img id="graph" src="https://via.placeholder.com/150" alt="">
    <div class="container">
    <h4>Your Journal Entries</h4>
  </div>
  <% if (typeof journals === 'object' && journals) { %>
    <% journals.forEach(journal => { %>
      <div class="journal">
        <p><em><%= journal.date.toDateString() %></em></p>
        <ul>
          <li>Exercise? <b><%= journal.exercise ? 'Yes' : 'No' %></b></li>
          <li>Go outside? <b><%= journal.outdoors ? 'Yes' : 'No ' %></b></li>
          <li>Rating: <b><%= journal.rating %></b></li>
        </ul>
        <hr>
        <div class="entry">
          <% journal.entry.split('\n').forEach(paragraph => { %>
            <p><%= paragraph %></p>
          <% }) %>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>You have not written any journal entries yet.</p>
  <% } %>
  <button>Add New Entry</button>
  </main>